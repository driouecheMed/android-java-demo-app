<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/operation_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:paddingEnd="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/input_number_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="0" />

    <TextView
        android:id="@+id/input_number_tv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:paddingEnd="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_c"
                style="@style/option_btn"
                android:text="C" />

            <Button
                android:id="@+id/button_clear"
                style="@style/option_btn"
                android:text="CE" />

            <ImageButton
                android:id="@+id/button_back"
                style="@style/option_btn"
                android:layout_width="88dp"
                android:gravity="center"
                android:src="@android:drawable/ic_input_delete"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button_division"
                style="@style/option_btn"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_7"
                style="@style/number_btn"
                android:text="7" />

            <Button
                android:id="@+id/button_8"
                style="@style/number_btn"
                android:text="8" />

            <Button
                android:id="@+id/button_9"
                style="@style/number_btn"
                android:text="9" />

            <Button
                android:id="@+id/button_multiplication"
                style="@style/option_btn"
                android:text="*" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_4"
                style="@style/number_btn"
                android:text="4" />

            <Button
                android:id="@+id/button_5"
                style="@style/number_btn"
                android:text="5" />

            <Button
                android:id="@+id/button_6"
                style="@style/number_btn"
                android:text="6" />

            <Button
                android:id="@+id/button_sub"
                style="@style/option_btn"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1"
                style="@style/number_btn"
                android:text="1" />

            <Button
                android:id="@+id/button_2"
                style="@style/number_btn"
                android:text="2" />

            <Button
                android:id="@+id/button_3"
                style="@style/number_btn"
                android:text="3" />

            <Button
                android:id="@+id/button_add"
                style="@style/option_btn"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_modulo"
                style="@style/option_btn"
                android:text="%" />

            <Button
                android:id="@+id/button_0"
                style="@style/number_btn"
                android:text="0" />

            <Button
                android:id="@+id/button_dot"
                style="@style/number_btn"
                android:text="." />

            <Button
                android:id="@+id/button_equal"
                style="@style/prime_btn"
                android:text="=" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>