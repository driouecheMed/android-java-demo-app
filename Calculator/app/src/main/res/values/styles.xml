<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="option_btn" parent="@style/base_btn">
        <item name="android:background">@drawable/option_btn</item>
    </style>

    <style name="number_btn" parent="@style/base_btn">
        <item name="android:background">@drawable/number_btn</item>
    </style>

    <style name="prime_btn" parent="@style/base_btn">
        <item name="android:background">@drawable/prime_btn</item>
    </style>

</resources>